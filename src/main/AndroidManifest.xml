<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.quittle.a11yally"
        android:installLocation="internalOnly"
        android:versionCode="1"
        android:versionName="0.0.0">
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="com.quittle.a11yally.MANAGE_RECORDING" />

    <!-- Remove Firebase added permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" tools:node="remove" />
    <uses-permission android:name="android.permission.INTERNET" tools:node="remove" />
    <uses-permission android:name="android.permission.WAKE_LOCK" tools:node="remove" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" tools:node="remove" />

    <permission
            android:name="com.quittle.a11yally.MANAGE_RECORDING"
            android:description="@string/permission_manage_recording_description"
            android:label="@string/permission_manage_recording_label"
            android:protectionLevel="dangerous" />

    <application
            android:name=".A11yAllyApplication"
            android:label="@string/app_label"
            android:icon="@mipmap/ic_launcher"
            android:allowBackup="true"
            android:theme="@style/Theme.Main"
            android:supportsRtl="false">
        <!-- Triggers preemptive caching of the ocr models on install from the Google Play Store -->
        <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="ocr"/>
        <activity android:name=".activity.MainActivity"
                android:screenOrientation="userPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.WelcomeActivity" android:theme="@style/Theme.Main.NoActionBar" />
        <activity android:name=".activity.LearnMoreActivity" android:label="@string/learn_more" android:parentActivityName=".activity.WelcomeActivity" />
        <activity android:name=".activity.PermissionsActivity" />
        <activity android:name=".activity.UnfriendlyActivity" android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.FeatureSettingsActivity" android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.MultiAppSelectionActivity" android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.DialogActivity" android:theme="@style/Theme.AppCompat.Dialog" android:excludeFromRecents="true" />

        <service android:name=".analyzer.A11yAllyAccessibilityAnalyzer"
                android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                    android:name="android.accessibilityservice"
                    android:resource="@xml/accessibility_service_config" />
        </service>
        <service android:name=".RecordingService"
                android:permission="com.quittle.a11yally.MANAGE_RECORDING">
            <intent-filter>
                <action android:name="com.quittle.a11yally.START_RECORDING" />
                <action android:name="com.quittle.a11yally.STOP_RECORDING" />
            </intent-filter>
        </service>

        <!-- Remove Firebase added additions to the application -->
        <receiver android:name="com.google.firebase.iid.FirebaseInstanceIdReceiver" tools:node="remove" />
        <provider android:name="com.google.firebase.provider.FirebaseInitProvider" android:authorities="com.quittle.a11yally" android:exported="false" tools:node="remove"/>
        <activity android:name="com.google.android.gms.common.api.GoogleApiActivity" tools:node="remove" />
        <activity android:name=".analyzer.firebase.FirebaseAnalyzerInitializerActivity" />
        <activity android:name=".permission.ScreenRecordingActivity" />
    </application>
</manifest>
