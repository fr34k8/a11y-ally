<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_action_background"
            android:orientation="vertical"
            android:padding="@dimen/activity_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:paddingBottom="10sp"
                android:text="@string/welcome_activity_title"
                style="@style/Main.Text.Title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="@string/welcome_activity_subtitle"
                style="@style/Main.Text" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_padding">
            <TextView
                style="@style/Main.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_activity_main_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/activity_padding">
                <Button
                    android:id="@+id/get_started"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/get_started_button"
                    android:layout_marginBottom="@dimen/button_padding"
                    style="@style/Main.Button.Primary" />

                <Button
                    android:id="@+id/learn_more"
                    style="@style/Main.Button.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/learn_more_button" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
